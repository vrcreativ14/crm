	<title>Nexus</title>
	<style type="text/css">
		:root {
    --ward: #dfb76c;}

		.header{
			padding: 20px 30px;
			border-bottom: 2px solid #ebebeb;
		}
		.logo img{
			width: 42%;
			display: block;
			margin: auto;
		}
		.num p{
			font-family: Roboto;
			color: #8191a5;
			margin-bottom: 0rem !important;
		}
		.num a{
			color: #dbae58;
			font-weight: bold;
			font-size: 26px;
		}
		.num a:hover{
			text-decoration: none;
		}
		.form-body{
			background-color: #f5f5f5;
			background-image: url(images/background.png);
			background-position: center center;
			background-repeat: no-repeat;
			background-size: cover;
			background-attachment: fixed;
		

		}
		.form-body{
			padding: 40px 10px;
		}
		h1{
      font-family: 'Montserrat-Bold' ;
      font-size: 30px;
    }
    h2{
      font-family: 'Montserrat-SemiBold' ;
      font-size: 22px;
    }
    p{
      font-family: 'Montserrat-Regular' ;
      font-size: 17.5px;
    }
    button,input[type=button]{
      font-family: 'Montserrat-Medium' ;
      font-size: 15px;
    }
    input[type=text]{
    	font-family: 'Montserrat-Regular' ;
      font-size: 13px;
    }
    .back-btn a,label{
    	 font-family: 'Montserrat-SemiBold' ;
      font-size: 16px;
    }
    
    .form-body p{
      color: #737374;
      padding: 7px;
    }
		.progress-row img{
			display: block;
			margin: auto;

		}
		.form-body{
			padding: 40px 10px;
		}
		.select-body p{
    	padding: 0px !important;
    }
		.progress-row .col-md-1,.progress-row .col-md-4,.progress-row .col-1{
			padding: 0px !important;
		}
progress {
  border-radius: 0px; 
  width: 100%;
  height: 8px;
}
progress::-webkit-progress-bar {
  background-color: #c5c5c5;
}
progress::-webkit-progress-value {
  background-color: #dfb76c;
  
}
::-moz-progress-value {
  background-color: #dfb76c !important;
  
}
.select-body{
	margin-top: 2rem;
	padding: 2rem 0rem 8rem 2rem;
	background-color: #fff;
	color: #000 !important;
	border-radius: 15px;

}
.select-body h2{
	font-size: 1.3rem;
}
button{
	padding: 10px;
	background-color: #fff;
	border-radius: 10px;
	border: 1px solid #f3f3f3;
    box-shadow: 5px 4px 3px 0px #f3f3f3;
	width: 350px;
	margin-top: 1rem;
	text-align: left;
}
button:hover{
	background-color: #dfb76c;
	border-radius: 10px;
	border: 1px solid #dfb76c;
	margin-top: 1rem;
	color: #fff;
}
button:hover img{
	filter:brightness(500%);
}
button span{
	padding: 0px 15px;
	font-weight: 500;
}
button:focus{
	outline: none;
}
.person{
	width: 30%;
}
.car{
	width: 70%;
}
::-webkit-scrollbar {
  width: 8px;
}

/* Track */
::-webkit-scrollbar-track {
  background: #c5c5c5;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: #dfb76c;
  border-radius: 0px;
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: #dfb76c;
  border-radius: 8px;
}
.thanks-num{
	color: #dfb76c;
	font-weight: 500;
}
.thanks-num:hover{
	color: #dfb76c;
	text-decoration: none	;
	font-weight: 500;
}
.thanks-web{
	color: #737374;
	
}
.thanks-web:hover{
	color: #737374;
	text-decoration: none	;
	
}
@media (max-width: 768px) {
	p{
		font-size: 14.5px;
	}
	.select-body h2{
	font-size: 11px;
	margin-top: 1.5rem;
}
	.form-body h1 {
    font-size: 1.3rem !important;}
	.none{
		display: none;
	}
	.header {
    padding: 20px 5px;
  }
  .logo img{
  	width: 40%;
  	margin: 0;
  }
  .num{
  	padding-top: 0.7rem;
  	text-align: right;
  }
  .num a {
  	font-size: 18px;
  	text-align: right;
}
.num p {
    font-size: 12px;
    font-weight: 500;
    text-align: right;}
	.d-md-block{
		display: none;
	}
.form-body p {
    color: #737374;
    padding: 0px ;}
    .select-body p{
    	padding: 0px !important;
    }
 .person{
	width: 66%;
}
.car{
	padding-top: 8px;
	width:120%;
}
.select-body {
    
    padding: 2rem 0rem 2rem 0rem;}}
@media (max-width: 500px) {
	
  .logo img{
  	width: 70%;
  	margin: 0;
  }}
@media (max-width: 360px) {
	button{
	
	width: 300px;
}
button span{
	    padding: 0px 0px;

	font-size: 15px;
}


	</style>


